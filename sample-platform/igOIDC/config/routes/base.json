{
    "name": "base",
    "baseURI": "http://idm-service.sample.svc.cluster.local:8080/",
    "condition": "${matches(request.uri.path, '^/$')}",
    "auditService": {
        "type": "AuditService",
        "config": {
            "config": {},
            "event-handlers": [{
                "class": "org.forgerock.audit.handlers.json.JsonAuditEventHandler",
                "config": {
                    "name": "json",
                    "logDirectory": "/tmp/logs",
                    "topics": [
                        "access"
                    ]
                }
            }]
        }
    },
    "handler": {
        "type": "StaticResponseHandler",
        "config": {
            "status": 302,
            "headers": {
                "Location": [ "/user/" ]
            }
        }
    }
}
